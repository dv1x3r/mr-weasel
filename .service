[Unit]
Description = telegram chat bot (mr-weasel)
ConditionPathExists=/home/weasel/app/mr-weasel/mr-weasel
After = network.target

[Service]
User = dev
Group = dev

WorkingDirectory = /home/weasel/app/mr-weasel
ExecStart = /home/weasel/app/mr-weasel/mr-weasel

StandardOutput=append:/home/weasel/logs/mr-weasel/out.log
StandardError=append:/home/weasel/logs/mr-weasel/err.log

KillSignal=SIGINT
Restart=on-failure
RestartSec=5s

[Install]
WantedBy = multi-user.target
